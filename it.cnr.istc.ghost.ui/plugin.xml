<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
	<extension
		point="org.eclipse.ui.editors">
		<editor
			class="it.cnr.istc.ghost.ui.GhostExecutableExtensionFactory:org.eclipse.xtext.ui.editor.XtextEditor"
			contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
			default="true"
			extensions="ghost"
			icon="icons/ghost_file.png"
			id="it.cnr.istc.ghost.Ghost"
			name="Ghost Editor">
		</editor>
	</extension>
	<extension
		point="org.eclipse.ui.handlers">
		<handler
			class="it.cnr.istc.ghost.ui.GhostExecutableExtensionFactory:org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclarationHandler"
			commandId="org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclaration">
			<activeWhen>
				<reference
					definitionId="it.cnr.istc.ghost.Ghost.Editor.opened">
				</reference>
			</activeWhen>
		</handler>
		<handler
			class="it.cnr.istc.ghost.ui.GhostExecutableExtensionFactory:org.eclipse.xtext.ui.editor.handler.ValidateActionHandler"
			commandId="it.cnr.istc.ghost.Ghost.validate">
		<activeWhen>
			<reference
					definitionId="it.cnr.istc.ghost.Ghost.Editor.opened">
			</reference>
		</activeWhen>
		</handler>
		<!-- copy qualified name -->
		<handler
			class="it.cnr.istc.ghost.ui.GhostExecutableExtensionFactory:org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedNameHandler"
			commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName">
			<activeWhen>
				<reference definitionId="it.cnr.istc.ghost.Ghost.Editor.opened" />
			</activeWhen>
		</handler>
		<handler
			class="it.cnr.istc.ghost.ui.GhostExecutableExtensionFactory:org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedNameHandler"
			commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedName">
			<activeWhen>
				<and>
					<reference definitionId="it.cnr.istc.ghost.Ghost.XtextEditor.opened" />
					<iterate>
						<adapt type="org.eclipse.xtext.ui.editor.outline.IOutlineNode" />
					</iterate>
				</and>
			</activeWhen>
		</handler>
	</extension>
	<extension point="org.eclipse.core.expressions.definitions">
		<definition id="it.cnr.istc.ghost.Ghost.Editor.opened">
			<and>
				<reference definitionId="isActiveEditorAnInstanceOfXtextEditor"/>
				<with variable="activeEditor">
					<test property="org.eclipse.xtext.ui.editor.XtextEditor.languageName" 
						value="it.cnr.istc.ghost.Ghost" 
						forcePluginActivation="true"/>
				</with>		
			</and>
		</definition>
		<definition id="it.cnr.istc.ghost.Ghost.XtextEditor.opened">
			<and>
				<reference definitionId="isXtextEditorActive"/>
				<with variable="activeEditor">
					<test property="org.eclipse.xtext.ui.editor.XtextEditor.languageName" 
						value="it.cnr.istc.ghost.Ghost" 
						forcePluginActivation="true"/>
				</with>		
			</and>
		</definition>
	</extension>
	<extension
			point="org.eclipse.ui.preferencePages">
		<page
			class="it.cnr.istc.ghost.ui.GhostExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
			id="it.cnr.istc.ghost.Ghost"
			name="Ghost">
			<keywordReference id="it.cnr.istc.ghost.ui.keyword_Ghost"/>
		</page>
		<page
			category="it.cnr.istc.ghost.Ghost"
			class="it.cnr.istc.ghost.ui.GhostExecutableExtensionFactory:org.eclipse.xtext.ui.editor.syntaxcoloring.SyntaxColoringPreferencePage"
			id="it.cnr.istc.ghost.Ghost.coloring"
			name="Syntax Coloring">
			<keywordReference id="it.cnr.istc.ghost.ui.keyword_Ghost"/>
		</page>
		<page
			category="it.cnr.istc.ghost.Ghost"
			class="it.cnr.istc.ghost.ui.GhostExecutableExtensionFactory:org.eclipse.xtext.ui.editor.templates.XtextTemplatePreferencePage"
			id="it.cnr.istc.ghost.Ghost.templates"
			name="Templates">
			<keywordReference id="it.cnr.istc.ghost.ui.keyword_Ghost"/>
		</page>
	</extension>
	<extension
			point="org.eclipse.ui.propertyPages">
		<page
			class="it.cnr.istc.ghost.ui.GhostExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
			id="it.cnr.istc.ghost.Ghost"
			name="Ghost">
			<keywordReference id="it.cnr.istc.ghost.ui.keyword_Ghost"/>
			<enabledWhen>
				<adapt type="org.eclipse.core.resources.IProject"/>
			</enabledWhen>
			<filter name="projectNature" value="org.eclipse.xtext.ui.shared.xtextNature"/>
		</page>
	</extension>
	<extension
		point="org.eclipse.ui.keywords">
		<keyword
			id="it.cnr.istc.ghost.ui.keyword_Ghost"
			label="Ghost"/>
	</extension>
	<extension
		point="org.eclipse.ui.commands">
	<command
			description="Trigger expensive validation"
			id="it.cnr.istc.ghost.Ghost.validate"
			name="Validate">
	</command>
	<!-- copy qualified name -->
	<command
			id="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName"
			categoryId="org.eclipse.ui.category.edit"
			description="Copy the qualified name for the selected element"
			name="Copy Qualified Name">
	</command>
	<command
			id="org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedName"
			categoryId="org.eclipse.ui.category.edit"
			description="Copy the qualified name for the selected element"
			name="Copy Qualified Name">
	</command>
	</extension>
	<extension point="org.eclipse.ui.menus">
		<menuContribution
			locationURI="popup:#TextEditorContext?after=group.edit">
			 <command
				 commandId="it.cnr.istc.ghost.Ghost.validate"
				 style="push"
				 tooltip="Trigger expensive validation">
			<visibleWhen checkEnabled="false">
				<reference
					definitionId="it.cnr.istc.ghost.Ghost.Editor.opened">
				</reference>
			</visibleWhen>
		</command>
		</menuContribution>
		<!-- copy qualified name -->
		<menuContribution locationURI="popup:#TextEditorContext?after=copy">
			<command commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName" 
				style="push" tooltip="Copy Qualified Name">
				<visibleWhen checkEnabled="false">
					<reference definitionId="it.cnr.istc.ghost.Ghost.Editor.opened" />
				</visibleWhen>
			</command>
		</menuContribution>
		<menuContribution locationURI="menu:edit?after=copy">
			<command commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName"
				style="push" tooltip="Copy Qualified Name">
				<visibleWhen checkEnabled="false">
					<reference definitionId="it.cnr.istc.ghost.Ghost.Editor.opened" />
				</visibleWhen>
			</command>
		</menuContribution>
		<menuContribution locationURI="popup:org.eclipse.xtext.ui.outline?after=additions">
			<command commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedName" 
				style="push" tooltip="Copy Qualified Name">
				<visibleWhen checkEnabled="false">
					<and>
						<reference definitionId="it.cnr.istc.ghost.Ghost.XtextEditor.opened" />
						<iterate>
							<adapt type="org.eclipse.xtext.ui.editor.outline.IOutlineNode" />
						</iterate>
					</and>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
	<extension point="org.eclipse.ui.menus">
		<menuContribution locationURI="popup:#TextEditorContext?endof=group.find">
			<command commandId="org.eclipse.xtext.ui.editor.FindReferences">
				<visibleWhen checkEnabled="false">
					<reference definitionId="it.cnr.istc.ghost.Ghost.Editor.opened">
					</reference>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
	<extension point="org.eclipse.ui.handlers">
		<handler
			class="it.cnr.istc.ghost.ui.GhostExecutableExtensionFactory:org.eclipse.xtext.ui.editor.findrefs.FindReferencesHandler"
			commandId="org.eclipse.xtext.ui.editor.FindReferences">
			<activeWhen>
				<reference
					definitionId="it.cnr.istc.ghost.Ghost.Editor.opened">
				</reference>
			</activeWhen>
		</handler>
	</extension>
	<!-- adding resource factories -->
	<extension
		point="org.eclipse.emf.ecore.extension_parser">
		<parser
			class="it.cnr.istc.ghost.ui.GhostExecutableExtensionFactory:org.eclipse.xtext.resource.IResourceFactory"
			type="ghost">
		</parser>
	</extension>
	<extension point="org.eclipse.xtext.extension_resourceServiceProvider">
		<resourceServiceProvider
			class="it.cnr.istc.ghost.ui.GhostExecutableExtensionFactory:org.eclipse.xtext.ui.resource.IResourceUIServiceProvider"
			uriExtension="ghost">
		</resourceServiceProvider>
	</extension>
	<!-- marker definitions for it.cnr.istc.ghost.Ghost -->
	<extension
			id="ghost.check.fast"
			name="Ghost Problem"
			point="org.eclipse.core.resources.markers">
		<super type="org.eclipse.xtext.ui.check.fast"/>
		<persistent value="true"/>
	</extension>
	<extension
			id="ghost.check.normal"
			name="Ghost Problem"
			point="org.eclipse.core.resources.markers">
		<super type="org.eclipse.xtext.ui.check.normal"/>
		<persistent value="true"/>
	</extension>
	<extension
			id="ghost.check.expensive"
			name="Ghost Problem"
			point="org.eclipse.core.resources.markers">
		<super type="org.eclipse.xtext.ui.check.expensive"/>
		<persistent value="true"/>
	</extension>
	<extension point="org.eclipse.xtext.builder.participant">
		<participant
			class="it.cnr.istc.ghost.ui.GhostExecutableExtensionFactory:org.eclipse.xtext.builder.IXtextBuilderParticipant"
			fileExtensions="ghost"/>
	</extension>
	<extension point="org.eclipse.ui.preferencePages">
		<page
			category="it.cnr.istc.ghost.Ghost"
			class="it.cnr.istc.ghost.ui.GhostExecutableExtensionFactory:org.eclipse.xtext.builder.preferences.BuilderPreferencePage"
			id="it.cnr.istc.ghost.Ghost.compiler.preferencePage"
			name="Compiler">
			<keywordReference id="it.cnr.istc.ghost.ui.keyword_Ghost"/>
		</page>
	</extension>
	<extension point="org.eclipse.ui.propertyPages">
		<page
			category="it.cnr.istc.ghost.Ghost"
			class="it.cnr.istc.ghost.ui.GhostExecutableExtensionFactory:org.eclipse.xtext.builder.preferences.BuilderPreferencePage"
			id="it.cnr.istc.ghost.Ghost.compiler.propertyPage"
			name="Compiler">
			<keywordReference id="it.cnr.istc.ghost.ui.keyword_Ghost"/>
			<enabledWhen>
				<adapt type="org.eclipse.core.resources.IProject"/>
			</enabledWhen>
			<filter name="projectNature" value="org.eclipse.xtext.ui.shared.xtextNature"/>
		</page>
	</extension>
	<extension point="org.eclipse.ui.menus">
		<menuContribution locationURI="popup:#TextEditorContext?after=xtext.ui.openDeclaration">
			<command
				commandId="org.eclipse.xtext.ui.OpenGeneratedFileCommand"
				id="it.cnr.istc.ghost.Ghost.OpenGeneratedCode"
				style="push">
				<visibleWhen checkEnabled="false">
					<reference definitionId="it.cnr.istc.ghost.Ghost.Editor.opened" />
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
	<extension point="org.eclipse.ui.handlers">
		<handler
			class="it.cnr.istc.ghost.ui.GhostExecutableExtensionFactory:org.eclipse.xtext.ui.generator.trace.OpenGeneratedFileHandler"
			commandId="org.eclipse.xtext.ui.OpenGeneratedFileCommand">
			<activeWhen>
				<reference definitionId="it.cnr.istc.ghost.Ghost.Editor.opened" />
			</activeWhen>
		</handler>
	</extension>
	<!-- Quick Outline -->
	<extension
		point="org.eclipse.ui.handlers">
		<handler 
			class="it.cnr.istc.ghost.ui.GhostExecutableExtensionFactory:org.eclipse.xtext.ui.editor.outline.quickoutline.ShowQuickOutlineActionHandler"
			commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline">
			<activeWhen>
				<reference
					definitionId="it.cnr.istc.ghost.Ghost.Editor.opened">
				</reference>
			</activeWhen>
		</handler>
	</extension>
	<extension
		point="org.eclipse.ui.commands">
		<command
			description="Open the quick outline."
			id="org.eclipse.xtext.ui.editor.outline.QuickOutline"
			name="Quick Outline">
		</command>
	</extension>
	<extension point="org.eclipse.ui.menus">
		<menuContribution
			locationURI="popup:#TextEditorContext?after=group.open">
			<command commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline"
				style="push"
				tooltip="Open Quick Outline">
				<visibleWhen checkEnabled="false">
					<reference definitionId="it.cnr.istc.ghost.Ghost.Editor.opened"/>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
	<!-- quickfix marker resolution generator for it.cnr.istc.ghost.Ghost -->
	<extension
			point="org.eclipse.ui.ide.markerResolution">
		<markerResolutionGenerator
			class="it.cnr.istc.ghost.ui.GhostExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
			markerType="it.cnr.istc.ghost.ui.ghost.check.fast">
			<attribute
				name="FIXABLE_KEY"
				value="true">
			</attribute>
		</markerResolutionGenerator>
		<markerResolutionGenerator
			class="it.cnr.istc.ghost.ui.GhostExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
			markerType="it.cnr.istc.ghost.ui.ghost.check.normal">
			<attribute
				name="FIXABLE_KEY"
				value="true">
			</attribute>
		</markerResolutionGenerator>
		<markerResolutionGenerator
			class="it.cnr.istc.ghost.ui.GhostExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
			markerType="it.cnr.istc.ghost.ui.ghost.check.expensive">
			<attribute
				name="FIXABLE_KEY"
				value="true">
			</attribute>
		</markerResolutionGenerator>
	</extension>
	<!-- Rename Refactoring -->
	<extension point="org.eclipse.ui.handlers">
		<handler 
			class="it.cnr.istc.ghost.ui.GhostExecutableExtensionFactory:org.eclipse.xtext.ui.refactoring.ui.DefaultRenameElementHandler"
			commandId="org.eclipse.xtext.ui.refactoring.RenameElement">
			<activeWhen>
				<reference
					definitionId="it.cnr.istc.ghost.Ghost.Editor.opened">
				</reference>
			</activeWhen>
		</handler>
	</extension>
	<extension point="org.eclipse.ui.menus">
		<menuContribution
			locationURI="popup:#TextEditorContext?after=group.edit">
			<command commandId="org.eclipse.xtext.ui.refactoring.RenameElement"
				style="push">
				<visibleWhen checkEnabled="false">
					<reference
						definitionId="it.cnr.istc.ghost.Ghost.Editor.opened">
					</reference>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
	<extension point="org.eclipse.ui.preferencePages">
		<page
			category="it.cnr.istc.ghost.Ghost"
			class="it.cnr.istc.ghost.ui.GhostExecutableExtensionFactory:org.eclipse.xtext.ui.refactoring.ui.RefactoringPreferencePage"
			id="it.cnr.istc.ghost.Ghost.refactoring"
			name="Refactoring">
			<keywordReference id="it.cnr.istc.ghost.ui.keyword_Ghost"/>
		</page>
	</extension>
	<extension point="org.eclipse.compare.contentViewers">
		<viewer id="it.cnr.istc.ghost.Ghost.compare.contentViewers"
			class="it.cnr.istc.ghost.ui.GhostExecutableExtensionFactory:org.eclipse.xtext.ui.compare.InjectableViewerCreator"
			extensions="ghost">
		</viewer>
	</extension>
	<extension point="org.eclipse.compare.contentMergeViewers">
		<viewer id="it.cnr.istc.ghost.Ghost.compare.contentMergeViewers"
			class="it.cnr.istc.ghost.ui.GhostExecutableExtensionFactory:org.eclipse.xtext.ui.compare.InjectableViewerCreator"
			extensions="ghost" label="Ghost Compare">
		</viewer>
	</extension>
	<extension point="org.eclipse.ui.editors.documentProviders">
		<provider id="it.cnr.istc.ghost.Ghost.editors.documentProviders"
			class="it.cnr.istc.ghost.ui.GhostExecutableExtensionFactory:org.eclipse.xtext.ui.editor.model.XtextDocumentProvider"
			extensions="ghost">
		</provider>
	</extension>
	<extension point="org.eclipse.team.core.fileTypes">
		<fileTypes
			extension="ghost"
			type="text">
		</fileTypes>
	</extension>
	<extension
		id="nature.GhostNature"
		name="Ghost"
		point="org.eclipse.core.resources.natures">
		<runtime>
			<run
				class="it.cnr.istc.ghost.ui.nature.GhostNature">
			</run>
		</runtime>
	</extension>
	<extension
		point="org.eclipse.ui.newWizards">
		<wizard
			category="it.cnr.istc.ghost.ui.ghostCategory"
			class="it.cnr.istc.ghost.ui.GhostExecutableExtensionFactory:it.cnr.istc.ghost.ui.wizard.GhostCustomizedNewProjectWizard"
			icon="icons/newproject_wizard.png"
			id="it.cnr.istc.ghost.ui.wizard.GhostNewProjectWizard"
			name="Ghost Project"
			project="true">
			<description>
				Creates a new Ghost project
			</description>
		</wizard>
		<category
			id="it.cnr.istc.ghost.ui.ghostCategory"
			name="Ghost">
		</category>
	</extension>
	<extension
		point="org.eclipse.ui.ide.projectNatureImages">
		<image
			icon="icons/proj_overlay.png"
			id="it.cnr.istc.ghost.ui.nature.overlay"
			natureId="it.cnr.istc.ghost.ui.nature.GhostNature">
		</image>
	</extension>
</plugin>
